<% if !flash[:notice].blank? %>
    <%= flash[:notice] %>
<%end%>

<%= link_to("<< Back to List", :action => 'index') %>

<h1>Add Book</h1>
<p>Enter info to add a new book to the main page</p>


<%= form_for (@book) do |f| %>
    <%= f.label :title%> <br />
    <%= f.text_field(:title) %> <br />
    <%= f.label :author%> <br />
    <%= f.text_field(:author) %><br />
    <%= f.label :genre%> <br />
    <%= f.select :genre, ['Fantasy','Science Fiction','Young Adult','Romance','Childrens','Horror', 'Mystery','NonFiction','Thriller','Adventure','Biography','Autobiography'] %><br />
    <%= f.label :price%> <br />
    <%= f.number_field :price, step: :any %><br />
    <%= f.label :published_date%> <br />
    <%= f.date_select :published_date, start_year: Time.new(1600).year, end_year: Time.now.year %>
    <%#= f.select :published_date, ((1800..Date.current.year.to_i).to_a.reverse)%><br /><br />
    <%=f.submit("Add Book")%><br />
<% end %>